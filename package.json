{
  "name": "qopy",
  "version": "1.0.0",
  "description": "Qopy - Secure temporary text sharing web application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test-migration": "node test-migration.js",
    "migrate": "psql $DATABASE_URL -f scripts/database-migration.sql",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit && npm outdated",
    "health:check": "bash scripts/health-check.sh",
    "ci": "npm run lint && npm run format:check && npm run test",
    "ci:full": "npm run lint && npm run format:check && npm run test:coverage && npm run security:audit"
  },
  "keywords": [
    "clipboard",
    "sharing",
    "anonymous",
    "temporary",
    "qopy"
  ],
  "author": "Qopy App",
  "license": "AGPL-3.0 OR Commercial",
  "licenses": [
    {
      "type": "AGPL-3.0",
      "url": "https://www.gnu.org/licenses/agpl-3.0.html"
    },
    {
      "type": "Commercial",
      "url": "mailto:qopy@lit.services"
    }
  ],
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "p-limit": "^4.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "form-data": "^4.0.4",
    "jest": "^29.7.0",
    "license-checker": "^25.0.1",
    "madge": "^6.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.8.0"
  }
}
